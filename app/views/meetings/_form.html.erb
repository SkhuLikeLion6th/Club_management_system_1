<%= form_for(meeting) do |f| %>
  <% if meeting.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(meeting.errors.count, "error") %> prohibited this meeting from being saved:</h2>

      <ul>
      <% meeting.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :일정 %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :내용 %>
    <%= f.text_field :content %>
  </div>
  
  <div class="field">
    <%= f.label :단체 %>
    <%= f.select :club_id, options_for_select(@clubs.collect {|c| [c.club_name, c.id] if ClubMember.find_by_user_id(current_user.id).club_id == c.id})  %>
  </div>
  

  <div class="field">
    <%= f.label :시작시간 %>
    <%= f.datetime_select :start_time %>
  </div>

  <div class="field">
    <%= f.label :끝나는시간 %>
    <%= f.datetime_select :end_time %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
